<h1>New  Game</h1>

<% @random.each do |letter| %>
  <div class="block">
    <h3><%= letter %></h3>
  </div>
<% end %>

<div class="container word-box">
  <form action="/score" method='POST' class='form-inline'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :random, @random %>
    <%= hidden_field_tag :start, @start %>
    <input type="text" name="found" class='form-control'>
    <input type="submit" class="submit btn btn-primary" value="Submit">
  </form>
</div>
